                            <m:msqrt>
                              <m:msup>
                                <m:mi>b</m:mi>
                                <m:mn>2</m:mn>
                              </m:msup>
                              <m:mo>−</m:mo>
                              <m:mn>4</m:mn>
                              <m:mi>a</m:mi>
                              <m:mi>c</m:mi>
                            </m:msqrt>
                          </m:mrow>
                          <m:mrow>
                            <m:mn>2</m:mn>
                            <m:mi>a</m:mi>
                          </m:mrow>
